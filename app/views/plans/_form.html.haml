= form_for @plan do |f|
  =error_messages_for @plan

  .field
    = f.label :name
  %label
    = f.radio_button :name, 0
    Январь
  %label
    = f.radio_button :name, 1
    Февраль
  %label
    = f.radio_button :name, 2
    Март
  %label
    = f.radio_button :name, 3
    Апрель
  %label
    = f.radio_button :name, 4
    Май
  %label
    = f.radio_button :name, 5
    Июнь
  %label
    = f.radio_button :name, 6
    Июль
  %label
    = f.radio_button :name, 7
    Август
  %label
    = f.radio_button :name, 8
    Сентябрь
  %label
    = f.radio_button :name, 9
    Октябрь
  %label
    = f.radio_button :name, 10
    Ноябрь
  %label
    = f.radio_button :name, 11
    Декабрь

  .form-group
    = f.label :year
    = f.number_field :year, type: " "
  .row
    .col-sm-4
      .form-group
        =f.label :product_id
        =f.select :product_id, Product.all.map{|c| [c.name,c.id]},{}, {class: 'form-control js-choosen', :multiple => true}
  .row
    .col-sm-4
      .form-group
        =f.label :section_id
        =f.select :section_id, Section.all.map{|c| [c.name,c.id]},{}, {class: 'form-control js-choosen', :multiple => true}
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
